<div class = "container text-body">
<h1>Shopping List</h1>
<br>
<%= link_to new_post_path do %>
<i class="fa fa-plus"></i>
<% end %>
</br>
<br>
<% prices = 0.00 %>
<% @posts.each do |post| %>
<span style = "color:#26A69A"><%= post.title %></span> <i class="fa fa-chevron-circle-right"></i> <span style = "color:#607D8B"> $ <%= post.price %></span>
<% prices = (post.price).to_f + (prices).to_f %>
<%= link_to post, method: :delete do %>
	<i class="fa fa-trash"></i>
<% end %>
<br>
<br>
<% end %>
<br>
Total estimated cost: $<%= prices %>
</div>
