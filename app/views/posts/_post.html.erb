<%= div_for post do %>
<div class = "item">
	<span class = "item-number"><%= number %>.</span>
	<span class = "item-title"><%= post.title.capitalize %></span><span class = "item-price"> $ <%= sprintf("%0.02f",post.price) %></span>
</div>
<div class = "item-delete">
	<%= link_to "X",  post, method: :delete, class: "btn btn-danger delete-btn" %>
</div>
<% end %>